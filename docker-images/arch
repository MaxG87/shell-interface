# archlinux:latest as of 15 June 2023
FROM archlinux@sha256:707c4cb0473b45bdeb3664a85d1c8888f7d9143ced98d895eba138126d68e506

RUN pacman -Syy --noconfirm archlinux-keyring
RUN rm -fr /etc/pacman.d/gnupg
RUN pacman-key --init
RUN pacman-key --populate archlinux

# Provide relevant binaries
RUN pacman -Syu --noconfirm
RUN pacman -S --noconfirm make python python-poetry

# Setup production dependencies
WORKDIR /project
COPY pyproject.toml poetry.lock ./
RUN python3 -m poetry install

# Install project
COPY src/ src/
RUN python3 -m poetry install

CMD python3 -m poetry run pytest --no-cov .
