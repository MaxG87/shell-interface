# python:3.8.17-slim-bookworm as of 15 June 2023
FROM python@sha256:a932f76d0927cc00f1dd20e2e73eb29af21fbe794dc6178642f2f121babfcd59

# Setup Poetry
ENV POETRY_VERSION=1.5.1
RUN python3 -m pip install "poetry==$POETRY_VERSION"
ENV PATH=$PATH:/root/.poetry/bin

# Setup production dependencies
WORKDIR /project
COPY pyproject.toml poetry.lock ./
RUN poetry install

# Install project
COPY src/ src/
RUN poetry install

CMD poetry run pytest --no-cov .
